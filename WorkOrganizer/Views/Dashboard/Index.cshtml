@model IEnumerable<WorkOrganizer.Domain.Entities.Project>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Dashboard</h1>
    <hr />
    <h4>Welcome @User.Identity.Name</h4>
    <hr />
</div>

<div class="row">
    <div class="col-md-4 mb-5">
        <div class="card h-100">
            <a asp-area="" asp-controller="Dashboard" asp-action="Projects"><img class="card-img-top" src="/images/thumb01.jpg" /></a>
            <div class="card-body">
                <h4 class="card-title">Projects</h4>
                <p class="card-text">Be a master of projects! Create a project and start organizing your work!</p>
            </div>
            <a class="btn btn-info btn-lg" asp-area="" asp-controller="Dashboard" asp-action="Projects">Go to projects! &raquo;</a>

        </div>
    </div>
    <div class="col-md-4 mb-5">
        <div class="card h-100">
            <a asp-area="" asp-controller="User" asp-action="Show"><img class="card-img-top" src="/images/thumb02.jpg" /></a>
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <p class="card-text">Gather all your colleagues and friends and invite them to your projects! Together we are strong!</p>
            </div>
            <a class="btn btn-info btn-lg" asp-area="" asp-controller="User" asp-action="Show">Go to users! &raquo;</a>

        </div>
    </div>
    <div class="col-md-4 mb-5">
        <div class="card h-100">
            <a asp-area="" asp-controller="AdvancedSearch" asp-action="Index"><img class="card-img-top" src="/images/thumb03.jpg" /></a>
            <div class="card-body">
                <h4 class="card-title">Advanced search</h4>
                <p class="card-text">Find your projects and colleagues with our search function!</p>
            </div>
            <a class="btn btn-info btn-lg" asp-area="" asp-controller="AdvancedSearch" asp-action="Index">Go to advanced search! &raquo;</a>

        </div>
    </div>
</div>
