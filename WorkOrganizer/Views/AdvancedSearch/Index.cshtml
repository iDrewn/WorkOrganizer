
@{
    ViewData["Title"] = "Advanced Search";
}

<div class="text-center">
    <h1 class="display-4">Advanced Search</h1>
</div>
<hr/>

<br />
<br />

<div class="d-flex p-2">
    <form asp-controller="AdvancedSearch" asp-action="SearchProjects" method="get" class="form-inline">
        <input class="form-control mr-sm-2" type="search" name="SearchString" placeholder="Search project.." aria-label="Search">
        <button class="btn btn-outline-dark my-2 my-sm-0 mr-sm-5" type="submit">Search</button>
    </form>
    <hr />
    <form asp-controller="AdvancedSearch" asp-action="SearchUsers" method="get" class="form-inline">
        <input class="form-control mr-sm-2" type="search" name="SearchString" placeholder="Search e-mail.." aria-label="Search">
        <button class="btn btn-outline-dark my-2 my-sm-0 mr-sm-5" type="submit">Search</button>
    </form>
    <hr />
    <form asp-controller="AdvancedSearch" asp-action="SearchJobs" method="get" class="form-inline">
        <input class="form-control mr-sm-2" type="search" name="SearchString" placeholder="Search job.." aria-label="Search">
        <button class="btn btn-outline-dark my-2 my-sm-0 mr-sm-5" type="submit">Search</button>
    </form>
</div>


